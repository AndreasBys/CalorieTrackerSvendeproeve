<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealMate.View.StartSkaermSide"
             Shell.NavBarIsVisible="False"
             Title="StartSkaermSide">
    <VerticalStackLayout BackgroundColor="#3C3C44">
        <HorizontalStackLayout HorizontalOptions="Center" Margin="100,200,100,100" >
            <Image Source="mealmatelogo.png" HeightRequest="75" WidthRequest="75" Margin="10,0,20,0"/>
            <Label VerticalOptions="Center" TextColor="White" FontSize="42">MealMate</Label>
        </HorizontalStackLayout>
        <StackLayout>
            <StackLayout Margin="80,0,80,0">
                <Label HorizontalOptions="Start" TextColor="White" FontSize="28" Margin="10,0,0,10">Email:</Label>
                <Border HeightRequest="60" StrokeThickness="2" Stroke="#2B2B32" BackgroundColor="#2B2B32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                    </Border.StrokeShape>
                    <Entry x:Name="emailEntry" HeightRequest="60" BackgroundColor="#2B2B32" TextColor="White" FontSize="28" ></Entry>
                </Border>
            </StackLayout>
            <StackLayout Margin="80,20,80,0">
                <Label HorizontalOptions="Start" TextColor="White" FontSize="28" Margin="10,0,0,10">Password:</Label>
                <Border HeightRequest="60" StrokeThickness="2" Stroke="#2B2B32" BackgroundColor="#2B2B32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                    </Border.StrokeShape>
                    <Entry x:Name="passwordEntry" HeightRequest="60" Background="#2B2B32" TextColor="White" FontSize="28" ></Entry>
                </Border>
            </StackLayout>
            <HorizontalStackLayout Margin="80,20,80,0">
                <CheckBox x:Name="rememberMeCheckBox" VerticalOptions="Center" Color="White" ScaleX="1.5" ScaleY="1.5" />
                <Label VerticalOptions="Center" TextColor="White" FontSize="28">Remember me</Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="80,20,80,0" HorizontalOptions="Center" >
                <Button Text="Log ind" WidthRequest="600" BackgroundColor="#007ED8" FontSize="28" Pressed="Logind_knap"></Button>
            </HorizontalStackLayout>
        </StackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,20,0,0">
            <Label TextColor="#808080" FontSize="22" >Har du ikke en konto endnu? </Label>
            <Label Text=" opret en!" TextColor="#007ED8" FontSize="22">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" Tapped="registrerBruger_knap">
                    
                </TapGestureRecognizer>
            </Label.GestureRecognizers>
        </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>