<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealMate.View.AdminHomePage"
             Title="AdminHomePage">
    <Grid>
        <Grid RowDefinitions="Auto,*">

            <SearchBar
                Placeholder="Søg ..." 
                TextChanged="OnTextChanged"/>

            <HorizontalStackLayout>
                <Button Text="Godkendt"/>
                <Button Text="Ikke godkendt"/>
            </HorizontalStackLayout>

            <ListView 
                x:Name="searchResults">


                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Label
                                   Text="G/R"
                                   FontAttributes="Bold"/>

                                <Label
                                   Text="Food"
                                   FontAttributes="Bold"/>

                                <Label
                                   Text="ShowSelected"
                                   FontAttributes="Bold"/>

                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>
            
        

        

        <Grid VerticalOptions="End" BackgroundColor="{StaticResource CustomMoerkeGraa}" HorizontalOptions="Fill">
            <Grid ColumnDefinitions="*,*,*,*" Padding="20">
                <Grid ColumnDefinitions="Auto" HorizontalOptions="Center" Grid.Column="1">
                    <Border  StrokeThickness="2" Stroke="{StaticResource CustomRød}" BackgroundColor="{StaticResource CustomRød}" HorizontalOptions="Fill" >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"></RoundRectangle>
                        </Border.StrokeShape>
                        <Button Text="Log ud" Grid.Column="0" FontSize="24" Padding="30,5,30,5"></Button>
                    </Border>


                </Grid>
                <Grid ColumnDefinitions="Auto" HorizontalOptions="Center" Grid.Column="2">
                    <Border  StrokeThickness="2" Stroke="{StaticResource CustomBlaa}" BackgroundColor="{StaticResource CustomBlaa}" HorizontalOptions="Fill" >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"></RoundRectangle>
                        </Border.StrokeShape>
                        <Button Text="Opret ny" Grid.Column="0" FontSize="24" Padding="30,5,30,5" WidthRequest="160"></Button>
                    </Border>


                </Grid>
            </Grid>
        </Grid>

    </Grid>
</ContentPage>