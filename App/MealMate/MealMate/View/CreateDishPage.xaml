<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MealMate.View.CreateDishPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:MealMate.Models"
    xmlns:vm="clr-namespace:MealMate.ViewModels"
    Title="CreateDishPage">
    <Grid>

        <Grid RowDefinitions="Auto,*">




            <Grid
                Grid.Row="1"
                Padding="{StaticResource OverallPadding}"
                BackgroundColor="{StaticResource CustomGraa}">






                <!--  Formular box  -->
                <Grid RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto">

                    <Grid
                        Grid.Row="0"
                        ColumnDefinitions="*,Auto"
                        RowDefinitions="Auto, *">

                        <Label
                            Grid.Row="0"
                            FontSize="28"
                            TextColor="White">
                            Rettens navn:
                        </Label>


                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="{StaticResource CustomMoerkeGraa}"
                            HorizontalOptions="Fill"
                            Stroke="{StaticResource CustomMoerkeGraa}"
                            StrokeThickness="2">


                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*">

                                <Entry
                                    Grid.Column="1"
                                    BackgroundColor="{StaticResource CustomMoerkeGraa}"
                                    FontSize="28"
                                    Text="{Binding Dishname}"
                                    TextColor="White" />
                            </Grid>

                        </Border>



                    </Grid>




                    <Grid Grid.Row="2" ColumnDefinitions="*,auto">

                        <Label
                            Padding="15"
                            FontSize="32"
                            HorizontalOptions="Fill"
                            TextColor="{StaticResource CustomHvid}">
                            Ingredienser
                        </Label>



                    </Grid>

                    <Grid
                        Grid.Row="3"
                        Padding="0,20,0,0"
                        RowDefinitions="*">

                        <ScrollView>
                            <CollectionView ItemsSource="{Binding FoodRequestForDish}" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="model:FoodInDish">
                                        <Grid ColumnDefinitions="*">
                                            <Grid
                                                Grid.Row="3"
                                                Padding="0,20,0,0"
                                                ColumnDefinitions="*,*,*,Auto,Auto"
                                                RowDefinitions="*">
                                                <Label
                                                    Grid.Column="0"
                                                    FontSize="28"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding name}"
                                                    TextColor="White"
                                                    VerticalOptions="Center" />

                                                <Grid Grid.Column="1" />

                                                <Border
                                                    Grid.Column="2"
                                                    BackgroundColor="{StaticResource CustomMoerkeGraa}"
                                                    HorizontalOptions="Fill"
                                                    Stroke="{StaticResource CustomMoerkeGraa}"
                                                    StrokeThickness="2">


                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="15" />
                                                    </Border.StrokeShape>
                                                    <Grid ColumnDefinitions="*">

                                                        <Entry
                                                            Grid.Column="1"
                                                            BackgroundColor="{StaticResource CustomMoerkeGraa}"
                                                            FontSize="28"
                                                            Text="{Binding weight, Mode=TwoWay}"
                                                            TextColor="White" />
                                                    </Grid>

                                                </Border>

                                                <Grid Grid.Column="3">
                                                    <Label
                                                        Padding="10,10,30,10"
                                                        FontSize="18"
                                                        TextColor="{StaticResource CustomTekstHvidereGraa}"
                                                        VerticalOptions="End">
                                                        g
                                                    </Label>
                                                </Grid>

                                                <Grid Grid.Column="4">

                                                    <ImageButton
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreateDishPageViewModel}}, Path=RemoveFromDishCommand}"
                                                        CommandParameter="{Binding}"
                                                        HeightRequest="45"
                                                        Source="fjern_ikon.png"
                                                        WidthRequest="45" />

                                                </Grid>
                                            </Grid>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </ScrollView>




                    </Grid>



                    <Grid
                        Grid.Row="5"
                        Padding="30"
                        ColumnDefinitions="*,Auto">



                        <Border
                            Grid.Column="0"
                            BackgroundColor="{StaticResource CustomMoerkeGraa}"
                            HorizontalOptions="Fill"
                            Stroke="{StaticResource CustomMoerkeGraa}"
                            StrokeThickness="2">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,Auto">
                                <Grid Padding="10">
                                    <Image
                                        Grid.Column="0"
                                        HeightRequest="35"
                                        Source="soege_ikon.png"
                                        WidthRequest="35" />
                                </Grid>
                                <Entry
                                    Grid.Column="1"
                                    BackgroundColor="{StaticResource CustomMoerkeGraa}"
                                    Completed="OnSearch"
                                    FontSize="28"
                                    Placeholder="SÃ¸g"
                                    Text="{Binding SearchText}"
                                    TextColor="White" />
                            </Grid>

                        </Border>

                        <Grid Grid.Column="1" Padding="20,0,0,0">
                            <Border
                                Padding="5"
                                BackgroundColor="{StaticResource CustomBlaa}"
                                HeightRequest="60"
                                HorizontalOptions="Fill"
                                Stroke="{StaticResource CustomBlaa}"
                                StrokeThickness="2"
                                WidthRequest="60">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20" />
                                </Border.StrokeShape>
                                <ImageButton
                                    Padding="5"
                                    HeightRequest="45"
                                    HorizontalOptions="Fill"
                                    Source="barkode_ikon.png"
                                    VerticalOptions="Fill"
                                    WidthRequest="45" />
                            </Border>
                        </Grid>


                    </Grid>

                    <Grid
                        Grid.Row="6"
                        Padding="30"
                        ColumnDefinitions="*">

                        <ScrollView>
                            <CollectionView ItemsSource="{Binding Foods}" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="model:Food">
                                        <Grid ColumnDefinitions="*">
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Padding="10"
                                                FontSize="32"
                                                HorizontalOptions="Start"
                                                Text="{Binding name}"
                                                TextColor="{StaticResource CustomHvid}"
                                                VerticalOptions="End" />

                                            <Grid ColumnDefinitions="*,*" HorizontalOptions="End">
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Padding="10,10,30,10"
                                                    FontSize="32"
                                                    HorizontalOptions="End"
                                                    Text="{Binding calories}"
                                                    TextColor="{StaticResource CustomHvid}"
                                                    VerticalOptions="End" />

                                                <Grid
                                                    Grid.Column="1"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Fill">

                                                    <Border
                                                        BackgroundColor="{StaticResource CustomGraa}"
                                                        HorizontalOptions="Fill"
                                                        Stroke="{StaticResource CustomGraa}"
                                                        StrokeThickness="2"
                                                        VerticalOptions="Fill">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="10,10,10,10" />
                                                        </Border.StrokeShape>
                                                        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                                                            <ImageButton
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                Aspect="AspectFit"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreateDishPageViewModel}}, Path=AddToDishCommand}"
                                                                CommandParameter="{Binding}"
                                                                HeightRequest="40"
                                                                HorizontalOptions="Fill"
                                                                Source="plus_ikon.png"
                                                                VerticalOptions="Fill"
                                                                WidthRequest="40" />
                                                        </Grid>
                                                    </Border>


                                                </Grid>
                                            </Grid>
                                        </Grid>

                                    </DataTemplate>

                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </ScrollView>


                    </Grid>






                </Grid>



            </Grid>



        </Grid>

        <Grid
            BackgroundColor="{StaticResource CustomMoerkeGraa}"
            HorizontalOptions="Fill"
            VerticalOptions="End">
            <Grid Padding="20" ColumnDefinitions="*,*,*,*">
                <Grid
                    Grid.Column="1"
                    ColumnDefinitions="Auto"
                    HorizontalOptions="Center">
                    <Border
                        BackgroundColor="{StaticResource CustomRÃ¸d}"
                        HorizontalOptions="Fill"
                        Stroke="{StaticResource CustomRÃ¸d}"
                        StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Button
                            Grid.Column="0"
                            Padding="30,5,30,5"
                            FontSize="24"
                            Pressed="annullerRetOprettelse_knap"
                            Text="Annuller" />
                    </Border>


                </Grid>
                <Grid
                    Grid.Column="2"
                    ColumnDefinitions="Auto"
                    HorizontalOptions="Center">
                    <Border
                        BackgroundColor="{StaticResource CustomBlaa}"
                        HorizontalOptions="Fill"
                        Stroke="{StaticResource CustomBlaa}"
                        StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Button
                            Grid.Column="0"
                            Padding="30,5,30,5"
                            Command="{Binding OpretCommand}"
                            FontSize="24"
                            Text="Gem"
                            WidthRequest="160" />
                    </Border>


                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>