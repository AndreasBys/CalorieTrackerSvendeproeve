                                                            <Shadow
                                                                Brush="Black"
                                                                Opacity="0.5"
                                                                Radius="1"
                                                                Offset="0,1" />
                                                        </Border.Shadow>
                                                        <Grid ColumnDefinitions="*">
                                                            <Label
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Padding="10"
                                                                FontSize="32"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding food.name}"
                                                                TextColor="{StaticResource CustomHvid}"
                                                                VerticalOptions="End" />
                                                            <Grid ColumnDefinitions="*,*" HorizontalOptions="End">
                                                                <Label
                                                                    Grid.Row="0"
                                                                    Grid.Column="0"
                                                                    Padding="10,10,30,10"
                                                                    FontSize="32"
                                                                    HorizontalOptions="End"
                                                                    Text="{Binding calories, StringFormat='{0} kcal'}"
                                                                    TextColor="{StaticResource CustomHvid}"
                                                                    VerticalOptions="End" />
                                                                <Grid
                                                                    Grid.Column="1"
                                                                    Padding="10"
                                                                    HorizontalOptions="End">
                                                                    <Image
                                                                        HeightRequest="25"
                                                                        HorizontalOptions="End"
                                                                        Source="pilned_hvid_ikon.png"
                                                                        WidthRequest="25" />
                                                                </Grid>
                                                            </Grid>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
