<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealMate.View.HjemmeskaermSide"
             xmlns:Navigationsbar="clr-namespace:MealMate.View"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             Title="HjemmeskaermSide">
    <Grid>
        <Grid BackgroundColor="{StaticResource CustomGraa}" Padding="100,50,100,0" >




            <!--Formular box-->
            <Grid RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto">



                <!--Dropdown box-->
                <Grid RowDefinitions="Auto,Auto" Grid.Row="1" Grid.Column="0" HorizontalOptions="Fill">

                    <Label HorizontalOptions="Start" TextColor="{StaticResource CustomHvid}" FontSize="22"  Grid.Row="0" VerticalOptions="End" Padding="10">Mål:</Label>

                    <Grid ColumnDefinitions="*, Auto" HorizontalOptions="Fill" Grid.Row="1" >
                        <Border  StrokeThickness="2" Stroke="{StaticResource CustomMoerkeGraa}" BackgroundColor="{StaticResource CustomMoerkeGraa}" HorizontalOptions="Fill">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                            </Border.StrokeShape>
                            <Grid>
                                <Picker Background="{StaticResource CustomMoerkeGraa}" TextColor="{StaticResource CustomHvid}" FontSize="28" Grid.Column="0" HorizontalOptions="Fill" Title="Vælg mål" TitleColor="{StaticResource CustomHvid}" x:Name="maalPicker">
                                    <Picker.Items>
                                        <x:String>Vægttab</x:String>
                                        <x:String>Tag vægt på</x:String>
                                    </Picker.Items>
                                </Picker>
                                <Grid Padding="10">
                                    <Image Source="pilned_ikon.png" HeightRequest="25" WidthRequest="25" HorizontalOptions="End"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <!--Dropdown box-->


                <!--Progress bar box-->

                <Grid RowDefinitions="*,*,*" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="4" Padding="0,40,0,30">

                    <!--Row 1-->
                    <Grid RowDefinitions="*" ColumnDefinitions="Auto,*,Auto" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="0">

                        <Grid Grid.Column="0">
                            <Image Source="boef_ikon.png" HeightRequest="45" WidthRequest="45"></Image>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="0" Padding="10" BackgroundColor="{StaticResource CustomGraa}">


                            <progressBar:SfLinearProgressBar  
                        TrackCornerRadius="20" 
                        ProgressHeight="50" 
                        ProgressCornerRadius="20" 
                        Progress="20" 
                        TrackHeight="50" 
                        Grid.Column="1" 
                        TrackFill="{StaticResource CustomMoerkeGraa}"
                        ProgressFill="{StaticResource CustomPink}"
                        BackgroundColor="{StaticResource CustomGraa}" >
                            </progressBar:SfLinearProgressBar>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid Padding="10">
                                <Label TextColor="{StaticResource CustomTekstHvidereGraa}" FontSize="18" VerticalTextAlignment="End">g</Label>
                            </Grid>

                        </Grid>
                    </Grid>

                    <!--Row 1-->

                    <!--Row 2-->
                    <Grid RowDefinitions="*" ColumnDefinitions="Auto,*,Auto" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="1">

                        <Grid Grid.Column="0">
                            <Image Source="sukker_icon.png" HeightRequest="45" WidthRequest="45"></Image>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="0" Padding="10" BackgroundColor="{StaticResource CustomGraa}">



                            <progressBar:SfLinearProgressBar  
        TrackCornerRadius="20" 
        ProgressHeight="50" 
        ProgressCornerRadius="20" 
        Progress="20" 
        TrackHeight="50" 
        Grid.Column="1" 
        TrackFill="{StaticResource CustomMoerkeGraa}"
        ProgressFill="{StaticResource CustomGrøn}"
        BackgroundColor="{StaticResource CustomGraa}" >
                            </progressBar:SfLinearProgressBar>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid Padding="10">
                                <Label TextColor="{StaticResource CustomTekstHvidereGraa}" FontSize="18" VerticalTextAlignment="End">g</Label>
                            </Grid>

                        </Grid>
                    </Grid>

                    <!--Row 2-->

                    <!--Row 3-->
                    <Grid RowDefinitions="*" ColumnDefinitions="Auto,*,Auto" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="2">

                        <Grid Grid.Column="0">
                            <Image Source="bacon_icon.png" HeightRequest="45" WidthRequest="45"></Image>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="0" Padding="10" BackgroundColor="{StaticResource CustomGraa}">


                            <progressBar:SfLinearProgressBar  
        TrackCornerRadius="20" 
        ProgressHeight="50" 
        ProgressCornerRadius="20" 
        Progress="20" 
        TrackHeight="50" 
        Grid.Column="1" 
        TrackFill="{StaticResource CustomMoerkeGraa}"
        ProgressFill="{StaticResource CustomGul}"
        BackgroundColor="{StaticResource CustomGraa}" >
                            </progressBar:SfLinearProgressBar>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid Padding="10">
                                <Label TextColor="{StaticResource CustomTekstHvidereGraa}" FontSize="18" VerticalTextAlignment="End">g</Label>
                            </Grid>

                        </Grid>
                    </Grid>

                    <!--Row 3-->

                </Grid>





            </Grid>


            
        </Grid>
        <Navigationsbar:Navigationsbar Grid.Row="7" MaximumHeightRequest="105" VerticalOptions="End" HorizontalOptions="Fill"/>
    </Grid>
</ContentPage>