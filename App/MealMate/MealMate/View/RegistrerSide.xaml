<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealMate.View.RegistrerSide"
             Title="RegistrerSide">
    <VerticalStackLayout BackgroundColor="#3C3C44">
        <HorizontalStackLayout HorizontalOptions="Center"  >
            <Image Source="mealmatelogo.png" HeightRequest="75" WidthRequest="75" Margin="10,0,20,0"/>
            <Label VerticalOptions="Center" TextColor="White" FontSize="42">MealMate</Label>
        </HorizontalStackLayout>
        
        <!--Formular box-->
        <StackLayout>
            
            <!--Box-->
            <StackLayout Margin="80,0,80,0">
                <Label HorizontalOptions="Start" TextColor="White" FontSize="28" Margin="10,0,0,10" Text="{Binding UsernameLabel}"></Label>
                <Border HeightRequest="60" StrokeThickness="2" Stroke="#2B2B32" BackgroundColor="#2B2B32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                    </Border.StrokeShape>
                    <Entry HeightRequest="60" BackgroundColor="#2B2B32" TextColor="White" FontSize="28" Text="{Binding Username}" ></Entry>
                </Border>
            </StackLayout>
            
            <!--Box-->
            <StackLayout Margin="80,20,80,0">
                <Label HorizontalOptions="Start" TextColor="White" FontSize="28" Margin="10,0,0,10" Text="{Binding EmailLabel}"></Label>
                <Border HeightRequest="60" StrokeThickness="2" Stroke="#2B2B32" BackgroundColor="#2B2B32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                    </Border.StrokeShape>
                    <Entry HeightRequest="60" Background="#2B2B32" TextColor="White" FontSize="28" Text="{Binding Email}"></Entry>
                </Border>
            </StackLayout>

            <StackLayout Margin="80,20,80,0">
                <Label HorizontalOptions="Start" TextColor="White" FontSize="28" Margin="10,0,0,10" >Password:</Label>
                <Border HeightRequest="60" StrokeThickness="2" Stroke="#2B2B32" BackgroundColor="#2B2B32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
                    </Border.StrokeShape>
                    <Entry HeightRequest="60" Background="#2B2B32" TextColor="White" FontSize="28" Text="{Binding Password}"></Entry>
                </Border>
            </StackLayout>

            <!--Text Box-->
            <HorizontalStackLayout Margin="80,20,80,0">
                <CheckBox VerticalOptions="Center" Color="White" ScaleX="1.5" ScaleY="1.5"></CheckBox>
                <Label VerticalOptions="Center" TextColor="White" FontSize="28">Remember me</Label>
            </HorizontalStackLayout>
            
            <!--Button box-->
            <HorizontalStackLayout Margin="80,20,80,0" HorizontalOptions="Center" >
                <Button Text="Registrer" HorizontalOptions="Fill" BackgroundColor="#007ED8" FontSize="28" Command="{Binding RegistrerCommand}"></Button>
            </HorizontalStackLayout>
        </StackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,20,0,0">
            <Label TextColor="#808080" FontSize="22" >Har du allerede en konto? </Label>
            <Label Text=" Log ind!" TextColor="#007ED8" FontSize="22">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TapCommand}" Tapped="logindForside_knap">

                    </TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>