<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MealMate"
             x:Class="MealMate.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source='{OnIdiom Desktop="Resources/Styles/Sizes.xaml"}'/>
                <ResourceDictionary Source='{OnIdiom Phone="Resources/Styles/SizesPhone.xaml"}'/>
                <ResourceDictionary Source='{OnIdiom Tablet="Resources/Styles/SizesTablet.xaml"}'/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
